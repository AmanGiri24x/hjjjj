# Server Configuration
NODE_ENV=development
PORT=5000
API_VERSION=v1

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/dhanaillytics
MONGODB_URI_TEST=mongodb://localhost:27017/dhanaillytics_test

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_here_min_32_characters
JWT_EXPIRES_IN=15m
JWT_REFRESH_SECRET=your_refresh_secret_here_min_32_characters
JWT_REFRESH_EXPIRES_IN=30d

# API Keys
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_key
FINNHUB_API_KEY=your_finnhub_key
NEWS_API_KEY=your_news_api_key

# Email Configuration
# Supported providers: smtp, gmail, outlook, sendgrid, mailgun
EMAIL_PROVIDER=gmail
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_app_password
EMAIL_APP_PASSWORD=your_app_specific_password
EMAIL_FROM=noreply@dhanaillytics.com

# SendGrid Configuration (if using SendGrid)
SENDGRID_API_KEY=your_sendgrid_api_key

# Mailgun Configuration (if using Mailgun)
MAILGUN_USERNAME=your_mailgun_username
MAILGUN_PASSWORD=your_mailgun_password

# Frontend URL (for email links)
FRONTEND_URL=http://localhost:3000

# File Upload Configuration
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf,doc,docx

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
CORS_ORIGIN=http://localhost:3000
CORS_CREDENTIALS=true

# AI/ML Configuration
# OpenAI Configuration
OPENAI_API_KEY=your_openai_key
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=2048
OPENAI_TEMPERATURE=0.3
OPENAI_ORGANIZATION=your_org_id_optional

# AI Service General Configuration
AI_CACHE_ENABLED=true
AI_CACHE_TTL=300
AI_CACHE_PREFIX=ai_cache:
AI_FALLBACK_STRATEGY=next_available
AI_REQUEST_TIMEOUT=60000
AI_MAX_CONCURRENT=10

# Other ML Services
HUGGINGFACE_API_KEY=your_huggingface_key

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log

# WebSocket Configuration
WS_PORT=5001
WS_CORS_ORIGIN=http://localhost:3000

# Security
BCRYPT_SALT_ROUNDS=12
SESSION_SECRET=your_session_secret_here

# External APIs
STOCK_API_BASE_URL=https://api.polygon.io
CRYPTO_API_BASE_URL=https://api.coinbase.com
FOREX_API_BASE_URL=https://api.fixer.io
